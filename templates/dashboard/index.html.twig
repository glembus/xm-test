{% extends "base.html.twig" %}

{% block title %}Company Finance History Dashboard{% endblock %}

{% block section_title %}Company Finance History Dashboard{% endblock %}

{% block body %}
    <div class="col-6" id="filter">
        {% include 'company-filter/filter.html.twig' %}
    </div>
    <div class="col-6">
        <div id="history-chart"></div>
    </div>
    <div class="col-6" id="history-table-container">
        <table class="d-none">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Open</th>
                    <th>High</th>
                    <th>Low</th>
                    <th>Close</th>
                    <th>Volume</th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
{% endblock %}

{% block footer_js %}
    <script src="{{ asset('js/Dashboard.js') }}"></script>
    <script src="{{ asset('js/FilterForm.js') }}"></script>
    <script src="{{ asset('js/HistoryChart.js') }}"></script>
    <script src="{{ asset('js/HistoryTable.js') }}"></script>
    <script type="application/javascript">
        $(document).ready(function () {
            let dashboard = new Dashboard();
            new FilterForm('#filter');
            new HistoryTable('#history-table-container', dashboard);
            new HistoryChart('#history-chart', dashboard);
        });
    </script>
{% endblock %}
